<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="application"
         name="hpcviewer"
         point="org.eclipse.core.runtime.applications">
      <application
            icon="icons/hpcviewerEclipse64.gif">
         <run
               class="edu.rice.cs.hpc.viewer.framework.HPCViewer">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="edu.rice.cs.hpc.viewer.framework.Perspective"
            icon="icons/hpc-16x16.png"
            id="edu.rice.cs.hpc.perspective"
            name="Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            class="edu.rice.cs.hpc.viewer.scope.ScopeView"
            icon="icons/cct.png"
            id="edu.rice.cs.hpc.viewer.scope.ScopeView"
            name="ScopeView">
      </view>
      <view
            allowMultiple="true"
            class="edu.rice.cs.hpc.viewer.scope.FlatScopeView"
            icon="icons/flat.png"
            id="edu.rice.cs.hpc.viewer.scope.FlatScopeView"
            name="FlatScopeView">
      </view>
      <view
            allowMultiple="true"
            class="edu.rice.cs.hpc.viewer.scope.CallerScopeView"
            icon="icons/caller.png"
            id="edu.rice.cs.hpc.viewer.scope.CallerScopeView"
            name="CallerView">
      </view>
      <view
            allowMultiple="true"
            class="edu.rice.cs.hpc.viewer.scope.ThreadScopeView"
            icon="icons/cct.png"
            id="edu.rice.cs.hpc.viewer.scope.ThreadScopeView"
            name="Thread scope view"
            restorable="true">
      </view>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="edu.rice.cs.hpc.viewer.application"
            name="hpcviewer">
         <property
               name="appName"
               value="hpcviewer">
         </property>
         <property
               name="aboutImage"
               value="icons/hpcviewerEclipseShadow128.png">
         </property>
         <property
               name="aboutText"
               value="hpcviewer is a user interface for analyzing a database of   &#x0A;performance metrics in conjunction with an application&apos;s source code.&#x0A;&#x0A;hpcviewer is part of Rice University&apos;s HPCToolkit project.  Development of &#x0A;HPCToolkit is principally funded by the Department of Energy&apos;s Office of &#x0A;Science as part of the SciDAC Center for Scalable Application Development&#x0A;Software and the Performance Engineering Research Institute.&#x0A;&#x0A;Release 5.2.1 (C) Copyright 2011, Rice University.">
         </property>
         <property
               name="windowImages"
               value="icons/hpcviewerEclipseShadow16.png,icons/hpcviewerEclipseShadow32.png,icons/hpcviewerEclipseShadow48.png,icons/hpcviewerEclipseShadow64.png,icons/hpcviewerEclipseShadow128.png">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="startupProgressRect"
               value="1,273,245,7">
         </property>
      </product>
   </extension>
   <extension
      point="org.eclipse.ui.editors">
	   <editor
          class="edu.rice.cs.hpc.viewer.editor.SourceCodeEditor"
          default="true"
          extensions="*"
          icon="icons/hpc-16x16.png"
          id="edu.rice.cs.hpc.viewer.util.SourceCodeEditor"
          name="Source Code Editor">
   		</editor>
    <editor
          class="edu.rice.cs.hpc.viewer.help.HTMLEditor"
          icon="icons/hpc-merged-16x16.png"
          id="edu.rice.cs.hpc.viewer.util.HTMLEditor"
          name="Web editor">
    </editor>
    <editor
          class="edu.rice.cs.hpc.viewer.graph.GraphEditorPlot"
          default="false"
          extensions="*"
          icon="icons/hpcviewer-icon-editor-plot.png"
          id="edu.rice.cs.hpc.viewer.graph.GraphEditorPlot"
          name="Plot editor">
    </editor>
    <editor
          class="edu.rice.cs.hpc.viewer.graph.GraphEditorPlotSort"
          default="false"
          extensions="*"
          icon="icons/hpcviewer-icon-editor-plotsort.png"
          id="edu.rice.cs.hpc.viewer.graph.GraphEditorPlotSort"
          name="Sort editor">
    </editor>
    <editor
          class="edu.rice.cs.hpc.viewer.graph.GraphEditorHisto"
          default="false"
          extensions="*"
          icon="icons/hpcviewer-icon-editor-histo.png"
          id="edu.rice.cs.hpc.viewer.graph.GraphEditorHisto"
          name="Histogram editor">
    </editor>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="edu.rice.cs.hpc.viewer.util.ViewerPreferencePage"
            id="edu.rice.cs.hpc.viewer.util.PreferencePage"
            name="hpcviewer Preferences">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="edu.rice.cs.hpc.viewer.util.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File"
               mnemonic="f"
               tooltip="File menu">
            <command
                  commandId="edu.rice.cs.hpc.viewer.command.newWindow"
                  label="New window"
                  style="push">
            </command>
            <command
                  commandId="edu.rice.cs.hpc.viewer.command.openDatabase"
                  label="Open database"
                  mnemonic="O"
                  style="push"
                  tooltip="Open a database">
            </command>
            <command
                  commandId="edu.rice.cs.hpc.viewer.command.mergeDatabase"
                  label="Merge database"
                  mnemonic="M"
                  style="push"
                  tooltip="Merging two or more databases">
            </command>
            <command
                  commandId="edu.rice.cs.hpc.viewer.command.closeDatabase"
                  label="Close database"
                  mnemonic="C"
                  style="push"
                  tooltip="Close database(s)">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="edu.rice.cs.hpc.viewer.provider.data.active">
                     <equals
                           value="ENABLED">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
            <separator
                  name="edu.rice.cs.hpc.viewer.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences"
                  mnemonic="p"
                  style="push"
                  tooltip="Set the preferences and hpcviewer settings">
            </command>
            <separator
                  name="edu.rice.cs.hpc.viewer.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="edu.rice.cs.hpc.viewer.command.closeWindow"
                  label="Close window"
                  mnemonic="c"
                  style="push"
                  tooltip="Closing a window (it also closes the application if only one window is created)">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit hpcviewer"
                  mnemonic="x"
                  style="push"
                  tooltip="Exit the application">
            </command>
         </menu>
         <menu
               label="Window"
               mnemonic="W"
               tooltip="Window menus">
            <command
                  commandId="edu.rice.cs.hpc.viewer.command.resetPerspective"
                  label="Reset layout"
                  mnemonic="R"
                  style="push"
                  tooltip="Reset the current window layout to the default settings">
            </command>
         </menu>
         <menu
               label="Help"
               mnemonic="h"
               tooltip="Help menu">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  label="About"
                  mnemonic="a"
                  style="push"
                  tooltip="About hpcviewer">
            </command>
            <command
                  commandId="edu.rice.cs.hpc.viewer.command.manual"
                  label="Help manual"
                  mnemonic="m"
                  style="push"
                  tooltip="Display the manual">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="edu.rice.cs.hpc.viewer.actions.OpenDatabase"
            description="Opening a database"
            id="edu.rice.cs.hpc.viewer.command.openDatabase"
            name="Open database">
      </command>
      <command
            defaultHandler="edu.rice.cs.hpc.viewer.actions.NewWindow"
            id="edu.rice.cs.hpc.viewer.command.newWindow"
            name="New window">
      </command>
      <command
            defaultHandler="edu.rice.cs.hpc.viewer.actions.CloseDatabase"
            id="edu.rice.cs.hpc.viewer.command.closeDatabase"
            name="Close database">
      </command>
      <command
            defaultHandler="edu.rice.cs.hpc.viewer.actions.HelpManual"
            id="edu.rice.cs.hpc.viewer.command.manual"
            name="Help manual">
      </command>
      <command
            defaultHandler="edu.rice.cs.hpc.viewer.actions.CloseWindow"
            id="edu.rice.cs.hpc.viewer.command.closeWindow"
            name="Close window">
      </command>
      <command
            defaultHandler="edu.rice.cs.hpc.viewer.actions.ResetPerspective"
            id="edu.rice.cs.hpc.viewer.command.resetPerspective"
            name="Reset layout">
      </command>
      <command
            defaultHandler="edu.rice.cs.hpc.viewer.actions.MergeDatabase"
            id="edu.rice.cs.hpc.viewer.command.mergeDatabase"
            name="Merge database">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="edu.rice.cs.hpc.viewer.provider.DatabaseState">
         <variable
               name="edu.rice.cs.hpc.viewer.provider.data.active"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
</plugin>
